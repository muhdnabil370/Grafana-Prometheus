<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Memo Management System</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .header h1 {
            color: white;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        
        .header p {
            color: rgba(255, 255, 255, 0.8);
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        
        .dashboard-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }
        
        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #667eea;
        }
        
        .grafana-panel {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }
        
        .grafana-panel h3 {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1rem 1.5rem;
            margin: 0;
            font-size: 1.1rem;
        }
        
        .grafana-iframe {
            width: 100%;
            height: 400px;
            border: none;
            display: block;
        }
        
        .full-dashboard {
            grid-column: 1 / -1;
        }
        
        .full-dashboard .grafana-iframe {
            height: 600px;
        }
        
        .quick-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .stat-item {
            text-align: center;
            padding: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            display: block;
        }
        
        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .btn-secondary {
            background: #f8f9fa;
            color: #495057;
            border: 1px solid #dee2e6;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        @media (max-width: 768px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
            
            .quick-stats {
                grid-template-columns: 1fr;
            }
            
            .container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìä Admin Dashboard</h1>
        <p>Memo Management System Analytics</p>
    </div>
    
    <div class="container">
        <!-- Quick Actions -->
        <div class="dashboard-grid">
            <div class="dashboard-card">
                <h3 class="card-title">üéØ Quick Actions</h3>
                <div class="actions">
                    <a href="/admin/create-memo" class="btn btn-primary">Create New Memo</a>
                    <a href="/admin/manage-users" class="btn btn-secondary">Manage Users</a>
                </div>
            </div>
            
            <div class="dashboard-card">
                <h3 class="card-title">üìà Live Statistics</h3>
                <div class="quick-stats" id="liveStats">
                    <div class="stat-item">
                        <span class="stat-number" id="todayMemos">-</span>
                        <span class="stat-label">Today's Memos</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" id="totalActive">-</span>
                        <span class="stat-label">Active Memos</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Embedded Grafana Panels -->
        <div class="grafana-panel">
            <h3>üìä Today's Statistics</h3>
            <iframe 
                src="http://localhost:3001/d-solo/memo-management/memo-management-dashboard?orgId=1&from=now-1d&to=now&panelId=1&theme=light"
                class="grafana-iframe"
                style="height: 200px;">
            </iframe>
        </div>
        
        <div class="grafana-panel">
            <h3>üìà 30-Day Trend Analysis</h3>
            <iframe 
                src="http://localhost:3001/d-solo/memo-management/memo-management-dashboard?orgId=1&from=now-30d&to=now&panelId=3&theme=light"
                class="grafana-iframe">
            </iframe>
        </div>
        
        <div class="dashboard-grid">
            <div class="grafana-panel">
                <h3>üè¢ Department Distribution</h3>
                <iframe 
                    src="http://localhost:3001/d-solo/memo-management/memo-management-dashboard?orgId=1&panelId=4&theme=light"
                    class="grafana-iframe">
                </iframe>
            </div>
            
            <div class="grafana-panel">
                <h3>üìã Performance Summary</h3>
                <iframe 
                    src="http://localhost:3001/d-solo/memo-management/memo-management-dashboard?orgId=1&panelId=5&theme=light"
                    class="grafana-iframe">
                </iframe>
            </div>
        </div>
        
        <!-- Full Dashboard Link -->
        <div class="grafana-panel full-dashboard">
            <h3>üîç Complete Analytics Dashboard</h3>
            <iframe 
                src="http://localhost:3001/d/memo-management/memo-management-dashboard?orgId=1&theme=light&kiosk"
                class="grafana-iframe">
            </iframe>
        </div>
    </div>
    
    <script>
        // Load live statistics
        async function loadStats() {
            try {
                const response = await fetch('/api/memo-stats');
                const data = await response.json();
                
                document.getElementById('todayMemos').textContent = data.todayMemos;
                document.getElementById('totalActive').textContent = data.totalMemos;
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }
        
        // Load stats on page load
        loadStats();
        
        // Refresh stats every 30 seconds
        setInterval(loadStats, 30000);
        
        // Handle iframe load errors
        document.querySelectorAll('.grafana-iframe').forEach(iframe => {
            iframe.addEventListener('error', function() {
                this.style.display = 'none';
                const errorMsg = document.createElement('div');
                errorMsg.innerHTML = '<p style="text-align: center; padding: 2rem; color: #666;">Grafana dashboard is loading... Please wait.</p>';
                this.parentNode.appendChild(errorMsg);
            });
        });
    </script>
</body>
</html>